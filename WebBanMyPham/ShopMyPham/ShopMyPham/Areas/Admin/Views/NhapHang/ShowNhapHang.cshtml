@model IEnumerable<ShopMyPham.Models.Entity.NhapHang>
@{
    ViewBag.Title = "ShowNhapHang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <br />
    <h3 style="margin-left:37%; color:#FA748F; font-weight:bold">QUẢN LÝ ĐƠN HÀNG</h3>
    <br />
    <table class="table table-bordered table-striped">
        <tr style="background: #FA748F">
            <th style="width: 200px">
                Mã Nhập Hàng
            </th>
            <th style="width: 200px">
                Ngày Nhập
            </th>
            <th style="width: 200px">
                Đã Thanh Toán
            </th>
            <th style="width: 200px">
                Mã NCC
            </th>
            <th style="width: 200px">
                Mã Nhân Viên
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 50px">
                    @Html.DisplayFor(modelItem => item.MaNhapHang)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.NgayNhap)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.DaThanhToan)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.NhaCungCap)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.MaNV)
                </td>
                <td>
                    @Html.ActionLink("Detail", "ChiTiet", new { @ma = item.MaNhapHang })
                </td>
            </tr>
        }

    </table>
</div>

