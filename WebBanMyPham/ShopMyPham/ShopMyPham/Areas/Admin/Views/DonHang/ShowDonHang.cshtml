@model IEnumerable<ShopMyPham.Models.Entity.DonHang>
@{
    ViewBag.Title = "ShowDonHang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <br />
    <h3 style="margin-left:37%; color:#FA748F; font-weight:bold">QUẢN LÝ ĐƠN HÀNG</h3>
    <br />
    <table class="table table-bordered table-striped">
        <tr style="background: #FA748F">
            <th style="width: 200px">
                Mã Đơn Hàng
            </th>
            <th style="width: 200px">
                Ngày Đặt
            </th>
            <th style="width: 200px">
                Đã Thanh Toán
            </th>
            <th style="width: 200px">
                Tình Trạng Giao Hàng
            </th>
            <th style="width: 200px">
                Mã Khách Hàng
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 50px">
                    @Html.DisplayFor(modelItem => item.MaDonHang)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.NgayDat)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.DaThanhToan)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.TinhTrangGiaoHang)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.MaKH)
                </td>
                <td>
                    @Html.ActionLink("Detail", "Detail", new { @ma = item.MaDonHang })
                </td>
                <td>
                    @Html.ActionLink("Đã Giao", "DTT", new { @ma = item.MaDonHang })
                </td>
            </tr>
        }

    </table>
</div>
