@model IEnumerable<ShopMyPham.Models.Entity.SanPham>
@{
    ViewBag.Title = "SanPhamAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <br />
    <h3 style="margin-left:37%; color:#FA748F; font-weight:bold">QUẢN LÝ SẢN PHẨM</h3>
    <br />
    @Html.ActionLink("Thêm Sản Phẩm", "ThemSP", "SanPhamAdmin")
    <table class="table table-bordered table-striped">
        <tr style="background: #FA748F">
            <th style="width: 100px">
                Mã Sản Phẩm
            </th>
            <th style="width: 300px">
                Tên Sản Phẩm
            </th>
            <th style="width: 50px">
                Giá Bán
            </th>
            <th style="width: 500px">
                Mô Tả
            </th>
            <th style="width: 100px">
                Đường Dẫn
            </th>
            <th style="width: 100px">
                Số Lượng
            </th>
            <th style="width: 50px">
                Mã NCC
            </th>
            <th style="width: 50px">
                Mã Loại SP
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 50px">
                    @Html.DisplayFor(modelItem => item.MaSP)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.TenSP)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.GiaBan)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td style="width: 100px">
                    <img src="~/Assets/img/@Html.DisplayFor(modelItem => item.AnhBia)" width="80px" height="80px" />
                    @*@Html.DisplayFor(modelItem => item.AnhBia)*@
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.SoLuongTon)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.MaNCC)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.MaLoaiSP)
                </td>
                <td>
                    @Html.ActionLink("Edit", "SuaSP", new { @ma = item.MaSP })
                </td>
            </tr>
        }
    </table>
</div>
