@{
    ViewBag.Title = "TimKiem1";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="row" style="margin-top:63px">
    <div class="col-sm-1"></div>
    <div class="col-sm-10" style="padding:0;background:#ffffff">
        <div class="row">
            <div class="col-sm-3">
                @Html.Action("DanhMucSP1", "DanhMucSanPham")
            </div>
            <div class="col-sm-9">
                <div id="demo" class="carousel slide" data-bs-ride="carousel">
                    <!-- Indicators/dots -->
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active" style="border-radius:100%; width:10px; height:10px; margin:10px; "></button>
                        <button type="button" data-bs-target="#demo" data-bs-slide-to="1" style="border-radius:100%; width:10px; height:10px; margin:10px"></button>
                    </div>
                    <!-- The slideshow/carousel -->
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Assets/img/QC5.jpg" alt="Los Angeles" class="d-block" style="width:100%">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Assets/img/QC4.jpg" alt="Chicago" class="d-block" style="width:100%">
                        </div>
                    </div>
                    <!-- Left and right controls/icons -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>
                <br />
                <div style="background:#FA748F">
                    <h3 style="margin-left:40%; font-weight:bold; color:white">SẢN PHẨM</h3>
                </div>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-4" style="margin-bottom:20px; width:32%; margin-left:10px">
                            <div class="card h-100 mb-1" style="border-color:#FA748F;background:#FFE7EC; ">
                                <img src="~/Assets/img/@item.AnhBia" class="card-img-top" style="width:90%; height:200px; margin-left:13px; margin-top:20px" />
                                <div class="card-body">
                                    <p class="card-title" style="font-weight:bold">@item.TenSP</p>
                                    <p class="card-title" style="color:red; font-weight:bold">Giá: @item.GiaBan VNĐ</p>
                                    <br />
                                    <a class="btn" style="background:#ff6a00; color:white; margin-left:60%; font-size:small" href="@Url.Action("ChiTietSanPham1", "SanPham", new { ma = item.MaSP })">Xem Chi Tiết</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-1"></div>
</div>
