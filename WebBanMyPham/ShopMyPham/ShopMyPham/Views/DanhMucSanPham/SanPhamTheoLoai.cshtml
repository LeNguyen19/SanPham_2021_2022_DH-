@model List<ShopMyPham.Models.Entity.SanPham>
@{
    ViewBag.Title = "SanPhamTheoLoai";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<div class="row" style="margin-top:63px">
    <div class="col-sm-1"></div>
    <div class="col-sm-10" style="padding:0;background:#ffffff">
        <div class="row">
            <div class="col-sm-3">
                @Html.Action("DanhMucSP", "DanhMucSanPham")
            </div>
            <div class="col-sm-9">
                <img src="~/Assets/img/TD.png" style="width:35%; height:80px; margin-left:32%" />
                <br />
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-4" style="margin-bottom:20px; width:32%; margin-left:10px">
                            <div class="card h-100 mb-1" style="border-color:#FA748F;background:#FFE7EC">
                                <img src="~/Assets/img/@item.AnhBia" class="card-img-top" style="width:90%; height:200px; margin-left:13px; margin-top:20px" />
                                <div class="card-body">
                                    <p class="card-title" style="font-weight:bold">@item.TenSP</p>
                                    <p class="card-title" style="color:red; font-weight:bold">Giá: @item.GiaBan VNĐ</p>
                                    <br />
                                    <a class="btn" style="background:#ff6a00; color:white; margin-left:60%; font-size:small" href="@Url.Action("ChiTietSanPham", "SanPham", new { ma = item.MaSP })">Xem Chi Tiết</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-1"></div>
</div>
