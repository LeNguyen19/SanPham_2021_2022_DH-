@using ShopMyPham.Models.Entity
@{
    var user = new ThongTin();
    if (Session["User"] != null)
    {
        user = Session["User"] as ThongTin;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <link type="text/css" rel="stylesheet" href="@Url.Content("/Assets/css/Style.css")" />
    <style>
        .navMenu {
            list-style: none;
            margin: 0;
            padding: 0;
            padding-top: 15px;
        }

            .navMenu li {
                display: inline;
                margin-left: 10px;
            }

            .navMenu a {
                text-decoration: none;
                color: #808080;
                font-weight: bold;
            }

                .navMenu a:hover {
                    color: #FA748F;
                }

        #menu {
            float: left;
            width: 86%;
        }

        #icon {
            float: left;
            padding-top: 5px;
        }
    </style>
</head>

<body style="background:#dddddd">
    @using (Html.BeginForm("TimKiem1","SanPham",FormMethod.Get))
    { 
    <nav class="fixed-top">
        <div class="row" style="height:63px">
            <div class="col-md-2" style="background:#FA748F">
                <a href="~/User/TrangChuUser"><img src="~/Assets/img/Name.png" style="height:60px; width:160px; margin-left:80px" href="#" /></a>
            </div>

            <div class="col-md-3" style="background:#FA748F; padding-top:12px">
                <input placeholder="Nhập sản phẩm bạn cần tìm" class="form-control me-2" type="text" name="ten" />
            </div>
            <div class="col-md-1" style="background:#FA748F; padding-top:12px">
                @*<button class="btn bg-white" type="button" style="color:#FA748F; font-weight:bold">Tìm Kiếm</button>*@
                <input class="btn bg-white" type="submit" style="color:#FA748F; font-weight:bold" value="Tìm Kiếm" />
            </div>
            
            <div class="col-md-6" style="background:#f0f0f0">
                <div class="container">
                    <div id="menu">
                        <ul class="navMenu">
                            <li><a href="~/User/SanPhamUser">SẢN PHẨM</a></li>
                            <li><a href="~/User/GioiThieuUser">GIỚI THIỆU</a></li>
                            <li><a href="~/User/UuDaiUser">ƯU ĐÃI</a></li>
                            <li><a href="~/User/LienHeUser">LIÊN HỆ</a></li>
                            <li><a href="~/GioHang/GioHang">GIỎ HÀNG</a></li>
                            <li>
                                <a>@user.HoTen</a>
                            </li>
                        </ul>
                    </div>
                    <div id="icon">
                        <img src="~/Assets/img/user.PNG" style="height:30px; width:35px; margin-top:7px" href="#" data-bs-toggle="dropdown" />
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="~/KhachHang/ViewDangNhap">Đăng Xuất</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("HoSo", "KhachHang", new { @ma = user.Ma })">Hồ Sơ</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    }
    @RenderBody()
</body>

</html>