@model ShopMyPham.Models.Entity.ThongTin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewDangKy</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <link type="text/css" rel="stylesheet" href="@Url.Content("/Assets/css/Style.css")" />
<style type="text/css">
        img.card-img-top {
            margin-top: 20px;
            margin-left: 23%;
        }

        p {
            margin: 7px;
        }

        input[type="text" i] {
            border-radius: 5px 5px 5px 5px;
            /*padding: 1px 2px;*/
            border-color: #FA748F;
            width: 346px;
            height: 38px;
            margin: 0;
            font-family: inherit;
            font-size: inherit;
            line-height: inherit;
        }

        .card {
            background-clip: inherit /*border-box*/;
            border: 1px solid #FA748F;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="row" style="margin-top:10px">
        <div class="col-md-1"></div>
        <div class="col-md-10" style="padding:0;background:#ffffff">
            <div id="center">
                <div id="slideshow">
                    <div class="row">
                        <div class="col-sm-9" style="padding:0">
                            <img src="~/Assets/img/DangKy.PNG" style="float:right; height:662px; margin-top:20px; margin-bottom:20px; width:650px" />
                        </div>
                        <div class="col-sm-3" style="padding:0">
                            <div class="card" style="width:380px;margin-top:20px;margin-bottom:20px">
                                <div class="card-header" style="background:#FA748F">
                                    <span style="color:white; font-weight:bold; margin-left:40%">ĐĂNG KÝ</span>
                                </div>

                                <div class="card-body">

                                    <p class="card-text"> Họ và tên: </p>
                                    @*<input class="form-control" type="text" style="border-color:#FA748F" />*@
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.HoTen)
                                        @Html.ValidationMessageFor(model => model.HoTen)
                                    </div>
                                    <p class="card-text"> Giới tính: </p>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.GioTinh)
                                        @Html.ValidationMessageFor(model => model.GioTinh)
                                    </div>
                                    @*<input class="form-control" type="text" style="border-color:#FA748F" />*@
                                    <p class="card-text"> Số điện thoại: </p>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.DienThoai)
                                        @Html.ValidationMessageFor(model => model.DienThoai)
                                    </div>
                                    @*<input class="form-control" type="text" style="border-color:#FA748F" />*@
                                    <p class="card-text"> Email: </p>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.Email)
                                        @Html.ValidationMessageFor(model => model.Email)
                                    </div>
                                    @*<input class="form-control" type="text" style="border-color:#FA748F" />*@
                                    <p class="card-text"> Địa Chỉ: </p>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.DiaChi)
                                        @Html.ValidationMessageFor(model => model.DiaChi)
                                    </div>
                                    @*<input class="form-control" type="text" style="border-color:#FA748F" />*@
                                    <p class="card-text"> Tên tài khoản: </p>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.TaiKhoan)
                                        @Html.ValidationMessageFor(model => model.TaiKhoan)
                                    </div>
                                    @*<input class="form-control" type="text" style="border-color:#FA748F" />*@
                                    <p class="card-text"> Mật khẩu: </p>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.MatKhau, new { @class = "form-control", style = "border-color:#FA748F" })
                                        @Html.ValidationMessageFor(model => model.MatKhau)
                                    </div>
                                    <br />
                                    <a style="color: red;">@ViewBag.LoiDangKy</a>
                                    <input style="background-color: #FA748F; color: #FFFFFF; margin-left: 40%; font-weight: bold; border-color:#FA748F; border-radius:5px" type="submit" value="ĐĂNG KÝ" />

                                    @*<a href="~/User/TrangChuUser" class="btn" style="background-color:#FA748F; color:#FFFFFF; margin-left:37%; font-weight:bold">ĐĂNG KÝ</a>*@
                                </div>
                            </div>
                        </div>
                        <a href="~/Views/KhachHang/ViewDangKy.cshtml">~/Views/KhachHang/ViewDangKy.cshtml</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
}
</body>
</html>
