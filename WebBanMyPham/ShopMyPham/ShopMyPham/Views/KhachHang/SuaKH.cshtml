@model ShopMyPham.Models.Entity.ThongTin
@{
    ViewBag.Title = "SuaKH";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style type="text/css">
    img.card-img-top {
        margin-top: 20px;
        margin-left: 23%;
    }

    p {
        margin: 7px;
    }

    input[type="text" i] {
        border-radius: 5px 5px 5px 5px;
        /*padding: 1px 2px;*/
        border-color: #FA748F;
        width: 346px;
        height: 38px;
        margin: 0;
        font-family: inherit;
        font-size: inherit;
        line-height: inherit;
    }

    .card {
        background-clip: inherit /*border-box*/;
        border: 1px solid #FA748F;
    }

    #left {
        float: left;
        width: 50%;
    }

    #right {
        float: left;
        width: 50%;
    }
</style>
<div class="row" style="margin-top:63px">
    <div class="col-sm-1"></div>
    <div class="col-sm-10" style="padding:0;background:#ffffff">
        <div class="row">
            <div class="col-sm-3">
                @Html.Action("DanhMucSP", "DanhMucSanPham")
            </div>
            <div class="col-sm-9" style="height:555px">
                <br />
                <h3 style="color:#FA748F; margin-left:30%">SỬA THÔNG TIN CỦA BẠN</h3>
                <br />
                <div class="container">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <fieldset>

                            <div style="margin-left:10%">
                                <div id="left">
                                    <div class="editor-label">
                                        @*@Html.LabelFor(model => model.HoTen)*@
                                        Họ và tên:
                                    </div>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.HoTen)
                                        @Html.ValidationMessageFor(model => model.HoTen)
                                    </div>
                                    <br />
                                    <div class="editor-label">
                                        @*@Html.LabelFor(model => model.GioTinh)*@
                                        Giới tính:
                                    </div>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.GioTinh)
                                        @Html.ValidationMessageFor(model => model.GioTinh)
                                    </div>
                                    <br />
                                    <div class="editor-label">
                                        @*@Html.LabelFor(model => model.DiaChi)*@
                                        Địa Chỉ
                                    </div>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.DiaChi)
                                        @Html.ValidationMessageFor(model => model.DiaChi)
                                    </div>
                                    <br />
                                    <div class="editor-label">
                                        @*@Html.LabelFor(model => model.DienThoai)*@
                                        Số Điện Thoại
                                    </div>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.DienThoai)
                                        @Html.ValidationMessageFor(model => model.DienThoai)
                                    </div>
                                    <br />
                                </div>
                                <div id="right">
                                    <div class="editor-label">
                                        @*@Html.LabelFor(model => model.Email)*@
                                        Email:
                                    </div>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.Email)
                                        @Html.ValidationMessageFor(model => model.Email)
                                    </div>
                                    <br />
                                    <div class="editor-label">
                                        @*@Html.LabelFor(model => model.TaiKhoan)*@
                                        Tên Tài Khoản:
                                    </div>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.TaiKhoan)
                                        @Html.ValidationMessageFor(model => model.TaiKhoan)
                                    </div>
                                    <br />
                                    <div class="editor-label">
                                        @*@Html.LabelFor(model => model.MatKhau)*@
                                        Mật Khẩu:
                                    </div>
                                    <div class="editor-field">
                                        @Html.EditorFor(model => model.MatKhau)
                                        @Html.ValidationMessageFor(model => model.MatKhau)
                                    </div>
                                    <br /><br />
                                    <p>
                                        <input style="border-radius:5px; background:#FA748F; border-color:#FA748F; color:white; width:35%; font-weight:bold;height: 38px" type="submit" value="Lưu Thông Tin" />
                                        <input href="~/Admin/QLKH" style="border-radius:5px; background:#FA748F; border-color:#FA748F; color:white; margin-left:3%; width:25%; font-weight:bold;height: 38px" type="submit" value="Huỷ Lưu" />
                                    </p>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>

            </div>
        </div>
    </div>
    <div class="col-sm-1"></div>
</div>
