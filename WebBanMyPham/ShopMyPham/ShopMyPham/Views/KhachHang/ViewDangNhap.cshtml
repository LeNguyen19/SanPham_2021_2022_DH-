@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewDangNhap</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <link type="text/css" rel="stylesheet" href="@Url.Content("/Assets/css/Style.css")" />
    <style type="text/css">
        img.card-img-top {
            margin-top: 20px;
            margin-left: 23%;
        }

        p {
            margin: 7px;
        }
        #NutDK:hover{
            background:#FA748F;
            color:#ffffff;
        }

        #NutDK{
            text-decoration:none; 
            font-family:Bahnschrift; 
            color:#FA748F
        }
    </style>

</head>
<body style="background:#FFE7EC">
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <link type="text/css" rel="stylesheet" href="@Url.Content("/Assets/css/Style.css")" />
            <div class="row" style="margin-top:65px; background:#FFE7EC">
                <div class="col-md-1"></div>
                <div class="col-md-10" style="padding:0;background:#FFE7EC">
                    <div id="center">
                        <div id="slideshow">
                            <div class="row">
                                <div class="col-sm-9" style="padding:0">
                                    <img src="~/Assets/img/bg_login.jpg" style="float:right; height:554px; margin-top:20px; margin-bottom:20px; width:635px" />
                                </div>
                                <div class="col-sm-3" style="padding:0">
                                    <div class="card" style="width:380px;margin-top:20px;margin-bottom:20px">
                                        <div class="card-header" style="background:#FA748F">
                                            <span style="color:white; font-weight:bold; margin-left:35%">ĐĂNG NHẬP</span>
                                        </div>
                                        <img class="card-img-top" src="~/Assets/img/logo.PNG" alt="Card image" style="width:58%" />
                                        <div class="card-body">

                                            <p class="card-text"> Tên đăng nhập: </p>
                                            <input class="form-control" type="text" name="TaiKhoan" style="border-color:#FA748F" />
                                            <p class="card-text"> Mật khẩu: </p>
                                            <input class="form-control" type="password" name="MatKhau" style="border-color:#FA748F" />
                                            <br />
                                            <input style="background-color: #FA748F; color: #FFFFFF; margin-left: 32%; font-weight: bold; border-color:#FA748F; border-radius:5px" type="submit" value="ĐĂNG NHẬP" />
                                            <br />
                                            <a style="color: red;">@ViewBag.BaoLoi</a>
                                            <p class="card-text" style="text-align: center">Chưa có tài khoản thì nhấn vào đây: <a id="NutDK" href="~/KhachHang/ViewDangKy">ĐĂNG KÝ</a></p>
</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-1"></div>
            </div>
        }
    </div>
</body>
</html>
