@model IEnumerable<ShopTrueLife.Models.KetNoiLinq.LoaiSanPham>
@{
    ViewBag.Title = "ShowLoaiSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <br />
    <h3 style="margin-left:37%; color:#FA748F; font-weight:bold">QUẢN LÝ SẢN PHẨM</h3>
    <br />
    @Html.ActionLink("Nhập Sản Phẩm", "ThemSanPham", "NhapHang")
    <table class="table table-bordered table-striped">
        <tr style="background: #FA748F">
            <th style="width: 100px">
                Mã Loại Sản Phẩm
            </th>
            <th style="width: 300px">
                Tên Loại Sản Phẩm
            </th>
            
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 50px">
                    @Html.DisplayFor(modelItem => item.ID_LoaiSanPham)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.TenLoaiSanPham)
                </td>
            </tr>
        }
    </table>
</div>
