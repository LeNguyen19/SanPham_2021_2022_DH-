@model IEnumerable<ShopTrueLife.Areas.Admin.Models.pojoNhaCungCap>
@{
    ViewBag.Title = "ShowNhaCungCap";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <br />
    <h3 style="margin-left:37%; color:#FA748F; font-weight:bold">QUẢN LÝ SẢN PHẨM</h3>
    <br />
    @Html.ActionLink("Thêm Nhà Cung Cấp", "ThemNhaCungCap", "NhaCungCap")
    <table class="table table-bordered table-striped">
        <tr style="background: #FA748F">
            <th style="width: 100px">
                Mã Nhà Cung Cấp
            </th>
            <th style="width: 300px">
                Tên Nhà Cung Cấp
            </th>
            <th style="width: 500px">
                Địa Chỉ Nhà Cung Cấp
            </th>
            <th>Số điện thoại Nhà Cung Cấp</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 50px">
                    @Html.DisplayFor(modelItem => item.iID_NCC)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.sTenNhaCungCap)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.sDiaChi)
                </td>
                <td style="width: 100px">
                    @Html.DisplayFor(modelItem => item.sSDT)
                </td>
                <td>
                    @Html.ActionLink("Loại Sản Phẩm", "ShowLoaiSanPham", "NhapHang")
                </td>
            </tr>
        }
    </table>
</div>
