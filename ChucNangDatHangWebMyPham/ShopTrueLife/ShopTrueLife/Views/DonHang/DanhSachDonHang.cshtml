@model IEnumerable<ShopTrueLife.Models.POJO.DonHang>
@{
    ViewBag.Title = "DanhSachDonHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    #font_a {
        text-decoration: none;
        color: black;
    }

        #font_a:hover {
            color: black;
        }

    .auto-style1 {
        flex: 0 0 auto;
        width: 33.33333333%;
        text-align: center;
        font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif;
    }

    #button {
        background: #FA748F;
        color: #ffffff;
        border-radius: 0;
    }

        #button:hover {
            background: #000000;
        }
</style>
<div class="row">
    <div class="col-md-3" style="background:#D9D9D9; height:270px; font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif; padding-top: 90px; padding-left:10%">
        <a style="color:#000000; font-size:35px;">Đơn hàng</a>
        <br />
        <a style="color:#000000; font-size:medium">Trang Chủ</a> / <a style="color:#FA748F;font-size:medium">Đơn hàng của bạn</a>
    </div>
    <div class="col-md-9" style="padding:0">
        <img src="~/Assets/img/gioiThieu.PNG" style="height:270px; width:100%" href="#" />
    </div>
</div>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <br />
        <h3 style="color:#FA748F; font-weight:bold; margin-left:35%">DANH SÁCH ĐƠN HÀNG CỦA BẠN</h3>
        <br />
        <table class="table table-bordered table-striped">
            <tr style="background-color:#FA748F">
                <th style="color:#ffffff">Tên Sản Phẩm</th>
                <th style="color:#ffffff">Ảnh</th>
                <th style="color:#ffffff">Số Lượng</th>
                <th style="color:#ffffff">Đơn Giá</th>
                <th style="color:#ffffff">Thành Tiền</th>
                <th style="color:#ffffff">Ngày Mua Hàng</th>
                <th style="color:#ffffff">Trạng Thái</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.sTenSP</td>
                    <td><img style="width:90%; height:200px; margin-left:13px; margin-top:20px" src="~/Assets/img/@item.sAnhBia" /></td>
                    <td>@item.iSoLuong</td>
                    <td>@item.dDonGia</td>
                    <td>@item.dThanhTien</td>
                    <td>@item.dNgayDat</td>
                    <td>
                        @if (item.iTrangThai == 0 )
                        {
                            <a>Đang xử lý đơn hàng</a>
                        }
                        else if (item.iTrangThai == 1)
                        {
                            <a>Đã xác nhận đơn hàng</a>
                        }
                        else if (item.iTrangThai == 2)
                        {
                            <a>Đang giao hàng</a>
                        }
                        else if (item.iTrangThai == 3)
                        {
                            <a>Đã nhận hàng</a>
                        }
                    </td>
                </tr>
            }
        </table>

    </div>
    <div class="col-md-1"></div>
</div>
<br />
<div class="row">
    <div class="auto-style1" style="background:#FA748F; color:#ffffff">
        <br />
        <a style="font-weight:bold">HỖ TRỢ KHÁCH HÀNG</a><br />
        <a>Thắc mắc - Hỏi đáp</a><br />
        <a>Hướng dẫn mua hàng</a><br />
        <a>Đặt hàng & Thanh toán</a><br />
    </div>
    <div class="auto-style1" style="background:#FA748F; color:#ffffff">
        <br />
        <a style="font-weight:bold">THÔNG TIN LIÊN HỆ</a><br />
        <a>140 Lê Trọng Tấn, Tây Thạnh, Tân Phú </a><br />
        <a>Hotline: 012345678 - 098765432</a><br />
        <a>Tư vấn bán hàng từ(8h - 20h thứ 2 - chủ nhật)</a><br />
    </div>
    <div class="auto-style1" style="background:#FA748F; color:#ffffff">
        <br />
        <a style="font-weight:bold">KẾT NỐI VỚI CHÚNG TÔI</a><br />
        <a></a><br />
        <a href="https://www.facebook.com/"><img src="~/Assets/img/fb.jpg" style="width:40px; height:40px;" href="#" /></a>
        <a href="https://www.instagram.com/"><img src="~/Assets/img/IG.jpg" style="width:40px; height:40px;" href="#" /></a>
        <a href="https://www.twitter.com/"><img src="~/Assets/img/wb.jpg" style="width:40px; height:40px;" href="#" /></a>
        <br />
        <a></a><br />
    </div>
</div>