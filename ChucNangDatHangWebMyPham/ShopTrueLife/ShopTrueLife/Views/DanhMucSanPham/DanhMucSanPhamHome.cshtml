@model IEnumerable<ShopTrueLife.Models.KetNoiLinq.LoaiSanPham>

<style>
    #font_a {
        text-decoration: none;
        color: black;
    }

        #font_a:hover {
            color: #FA748F;
        }
</style>

<div class="list-group" style="border-radius:0">
    <ul class="list-group" style="border-radius:0">
        <li class="list-group-item active" style="background:#FA748F; border-color:#FA748F; font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif; font-weight:bold; text-align:center">DANH MỤC SẢN PHẨM</li>

        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <a id="font_a" class="list-group-item-action" href="@Url.Action("SanPhamTheoLoaiHome", "DanhMucSanPham", new { @ma = item.ID_LoaiSanPham })">@item.TenLoaiSanPham</a>
            </li>
        }
    </ul>
</div>
